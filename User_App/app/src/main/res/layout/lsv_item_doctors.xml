<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_shadow_end_color"
                    android:orientation="vertical"
                    android:padding="1dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_Doctor_EducationDegree"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="s@gmail.com"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800" />

                        <TextView
                            android:id="@+id/tv_doctor_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="s@gmail.com"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800" />

                        <TextView
                            android:id="@+id/tv_doctor_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="777777777"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800" />

                        <TextView
                            android:id="@+id/tv_doctor_KuraimiAccount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="8800976"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800" />

                        <TextView
                            android:id="@+id/tv_position_longitude"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="14.47892"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800" />

                        <TextView
                            android:id="@+id/tv_position_latitude"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="14.47892"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_doctor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:fontFamily="@font/font5"
                            android:gravity="right"
                            android:minHeight="@dimen/spacing_xmlarge"
                            android:padding="2dp"
                            android:text="د/ تالين خالد علي سويد"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font5"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/spacing_xmlarge"
                            android:padding="2dp"
                            android:text="الأسم: "
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800"
                            android:textSize="12sp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_dot"
                            app:tint="@color/md_grey_800" />


                    </LinearLayout>

                    <View
                        android:id="@+id/divider82"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_doctor_specialize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:fontFamily="@font/font5"
                            android:gravity="right"
                            android:minHeight="@dimen/spacing_xmlarge"
                            android:padding="2dp"
                            android:text="أنف وأذن وحنجرة"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font5"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/spacing_xmlarge"
                            android:padding="2dp"
                            android:text="التخصص: "
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800"
                            android:textSize="12sp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_dot"
                            app:tint="@color/md_grey_800" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_booking_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:fontFamily="@font/font5"
                            android:gravity="right"
                            android:minHeight="@dimen/spacing_xmlarge"
                            android:padding="2dp"
                            android:text="3000 ريال يمني"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font5"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/spacing_xmlarge"
                            android:padding="2dp"
                            android:text="سعر الحجز: "
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800"
                            android:textSize="12sp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_dot"
                            app:tint="@color/md_grey_800" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_clinic_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:fontFamily="@font/font5"
                            android:gravity="right"
                            android:minHeight="@dimen/spacing_xmlarge"
                            android:padding="2dp"
                            android:text="عيادة د/تالين"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font5"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/spacing_xmlarge"
                            android:padding="2dp"
                            android:text="اسم العياده: "
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800"
                            android:textSize="12sp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_dot"
                            app:tint="@color/md_grey_800" />

                    </LinearLayout>

                    <View
                        android:id="@+id/divider182"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_doctor_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:fontFamily="@font/font5"
                            android:gravity="right"
                            android:padding="2dp"
                            android:text="شارع فلسطين"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font5"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="العنوان: "
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/md_grey_800"
                            android:textSize="12sp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_dot"
                            app:tint="@color/md_grey_800" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/thumb"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/dr_image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="0dp"
                            android:background="@color/about_us_background"
                            android:padding="6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/doctor_profile1"
                            app:riv_corner_radius="50dp"
                            app:riv_corner_radius_bottom_left="30dp" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btnDetails"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/top"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/btn_specific_shape"
                android:fontFamily="@font/font5"
                android:onClick="details"
                android:text="اضغط للمزيد من التفاصيل"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="normal" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>




