<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="10dp"
    android:paddingLeft="1dp"
    android:paddingTop="1dp"
    android:paddingRight="1dp"
    android:paddingBottom="1dp"
    android:visibility="visible"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">


    <RelativeLayout
        android:id="@+id/unsure_appointment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:padding="4dp">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="1dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/spacing_xmlarge"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:background="@android:color/transparent"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_arrow"
                        app:tint="@color/md_grey_800" />


                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="Patient Name : "
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_patient_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="Salah Doos"
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/spacing_xmlarge"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:background="@android:color/transparent"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_arrow"
                        app:tint="@color/md_grey_800" />


                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="Patient Address :"
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_patient_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="Madenah Al-Ommal"
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/spacing_xmlarge"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:background="@android:color/transparent"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_arrow"
                        app:tint="@color/md_grey_800" />

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="Patient Age : "
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_patient_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="22 Years old"
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/spacing_xmlarge"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:background="@android:color/transparent"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_arrow"
                        app:tint="@color/md_grey_800" />

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="Patient Gender : "
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_patient_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="Male"
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/spacing_xmlarge"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:background="@android:color/transparent"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_arrow"
                        app:tint="@color/md_grey_800" />

                    <TextView
                        android:id="@+id/txt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="Patient Phone : "
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_patient_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="775480089 "
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <View
                    android:id="@+id/dv2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="0dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/spacing_xmlarge"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:background="@android:color/transparent"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_dot"
                        app:tint="@color/md_grey_800" />

                    <TextView
                        android:id="@+id/txt6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="Booking Date : "
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_booking_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_xmlarge"
                        android:padding="2dp"
                        android:text="2021-11-10"
                        android:textColor="#042129"
                        android:textSize="13sp"
                        android:textStyle="normal" />


                </LinearLayout>


                <View
                    android:id="@+id/dv1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="0dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/btn_specific_shape"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/refuse_appointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_false_icon"
                        android:drawablePadding="10dp"
                        android:fontFamily="serif"
                        android:text="Refuse"
                        android:textAlignment="textStart"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@color/txt_Hint_Color" />

                    <TextView
                        android:id="@+id/accept_appointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_true_icon"
                        android:drawablePadding="10dp"
                        android:fontFamily="serif"
                        android:text="Accept"
                        android:textAlignment="textStart"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
