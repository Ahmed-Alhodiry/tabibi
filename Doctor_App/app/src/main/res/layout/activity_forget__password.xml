<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_us_background"
    android:orientation="vertical"
    tools:context=".Forget_Password">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/status_color"
                    android:fontFamily="serif"
                    android:padding="12dp"
                    android:text="Forget Your Password ??"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="normal" />


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.58"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appName"
                    app:layout_constraintVertical_bias="0.435"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/forget_password" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <com.github.captain_miao.optroundcardview.OptRoundCardView
                    android:id="@+id/optRoundCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:optRoundCardBackgroundColor="#E6FDFBFB"
                    app:optRoundCardCornerRadius="20dp"
                    app:optRoundCardElevation="2dp"
                    app:optRoundCardLeftBottomCorner="false"
                    app:optRoundCardLeftTopCorner="true"
                    app:optRoundCardRightBottomCorner="false"
                    app:optRoundCardRightTopCorner="true">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:padding="20dp"
                        android:text="Fill Your Data to Recover Password"
                        android:textAlignment="center"
                        android:textColor="#151515"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="50dp"
                            android:orientation="vertical">


                            <View
                                android:id="@+id/divider4"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="8dp"
                                android:background="#fff" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:padding="14dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#C9F1EEF6"
                                    android:orientation="vertical"
                                    android:padding="10dp">


                                    <EditText
                                        android:id="@+id/forgetPass_userEmail"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/inputs_height"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginRight="16dp"
                                        android:background="@drawable/layout_shape2"
                                        android:drawableRight="@drawable/ic_email2"
                                        android:fontFamily="serif"
                                        android:hint="Email"
                                        android:inputType="textEmailAddress"
                                        android:padding="12dp"
                                        android:textColorHint="@color/status_color"
                                        android:textSize="14sp" />

                                    <EditText
                                        android:id="@+id/forgetPass_userNumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/inputs_height"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginRight="16dp"
                                        android:layout_marginBottom="12dp"
                                        android:background="@drawable/layout_shape2"
                                        android:drawableRight="@drawable/ic_call2"
                                        android:drawableTint="@color/status_color"
                                        android:fontFamily="serif"
                                        android:hint="Phone Number"
                                        android:inputType="numberDecimal"
                                        android:padding="12dp"
                                        android:textColorHint="@color/status_color"
                                        android:textSize="14sp" />

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                            <Button
                                android:id="@+id/get_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="60dp"
                                android:layout_marginEnd="50dp"
                                android:background="@drawable/btn_shape"
                                android:fontFamily="sans-serif-light"
                                android:text="Get Password"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="normal" />


                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>


                </com.github.captain_miao.optroundcardview.OptRoundCardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>