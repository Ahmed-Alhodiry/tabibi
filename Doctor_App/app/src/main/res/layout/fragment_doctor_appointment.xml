<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    tools:context=".DoctorAppointmentFragment">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vie_bg">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/appointments_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_bg_shape"
            app:tabIndicatorColor="@color/black"
            android:textAlignment="center"
            app:tabRippleColor="@color/color2"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/md_grey_800"
         />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/appointments_viewpager_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            />
<!--
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/appointments_viewpager_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
        -->

    </LinearLayout>
</FrameLayout>